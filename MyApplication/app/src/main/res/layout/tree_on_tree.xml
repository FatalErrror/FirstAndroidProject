<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Сейчас ходит "
        android:textColor="#000000"
        android:textSize="30sp" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#7C1919" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleX="0.900001"
                android:scaleY="0.900001"
                app:srcCompat="@drawable/crosdraw" />

            <View
                android:id="@+id/view5"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="#000000" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleX="0.900002"
                android:scaleY="0.900001"
                app:srcCompat="@drawable/crosdraw" />

            <View
                android:id="@+id/view7"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="#000000" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleX="0.900003"
                android:scaleY="0.900001"
                app:srcCompat="@drawable/crosdraw" />

        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#050000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleX="0.900001"
                android:scaleY="0.900002"
                app:srcCompat="@drawable/crosdraw" />

            <View
                android:id="@+id/view8"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="#000000" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleX="0.900002"
                android:scaleY="0.900002"
                app:srcCompat="@drawable/circledraw" />

            <View
                android:id="@+id/view9"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="#000000" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleX="0.900003"
                android:scaleY="0.900002"
                app:srcCompat="@drawable/crosdraw" />
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#050000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleX="0.900001"
                android:scaleY="0.900003"
                app:srcCompat="@drawable/crosdraw" />

            <View
                android:id="@+id/view10"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="#000000" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleX="0.900002"
                android:scaleY="0.900003"
                app:srcCompat="@drawable/crosdraw" />

            <View
                android:id="@+id/view11"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="#000000" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleX="0.900003"
                android:scaleY="0.900003"
                app:srcCompat="@drawable/crosdraw" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>